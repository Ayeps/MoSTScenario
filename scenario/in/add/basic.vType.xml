<routes>
  <!-- Public Transports -->
  <vType vClass="bus"          id="bus"         personCapacity="50" latAlignment="arbitrary">
    <param key="has.rerouting.device" value="false"/>
  </vType>
  <vType vClass="rail"         id="train"       personCapacity="500">
    <param key="has.rerouting.device" value="false"/>
  </vType>

  <vTypeDistribution id="on-demand">
    <vType vClass="taxi"       id="taxi"  lcCooperative="0.75" lcPushy="0.25" personCapacity="4" latAlignment="arbitrary" probability=".50"/>
    <vType vClass="passenger"  id="uber"  lcCooperative="0.75" lcPushy="0.25" personCapacity="8" latAlignment="arbitrary" probability=".50"/>
  </vTypeDistribution>

  <!-- Vulnerable Road Users -->
  <vTypeDistribution id="pedestrian">
    <vType vClass="pedestrian"   id="slowpedestrian"  maxSpeed="1.0" lcCooperative="0.75" lcPushy="0.25" latAlignment="compact"/>
    <vType vClass="pedestrian"   id="avgpedestrian"   maxSpeed="1.5" lcCooperative="0.75" lcPushy="0.25" latAlignment="compact"/>
    <vType vClass="pedestrian"   id="fastpedestrian"  maxSpeed="2.0" lcCooperative="0.75" lcPushy="0.25" latAlignment="compact"/>
  </vTypeDistribution>
  <vTypeDistribution id="bicycle">
    <vType vClass="bicycle"      id="slowbicycle"     maxSpeed="4.2" lcCooperative="0.75" lcPushy="0.25" latAlignment="compact"/>
    <vType vClass="bicycle"      id="avgbicycle"      maxSpeed="5.5" lcCooperative="0.75" lcPushy="0.25" latAlignment="compact"/>
    <vType vClass="bicycle"      id="fastbicycle"     maxSpeed="6.9" lcCooperative="0.75" lcPushy="0.25" latAlignment="compact"/>
  </vTypeDistribution>

  <!-- Normal vehicles -->
  <vTypeDistribution id="ptw">
    <vType vClass="motorcycle" id="motorcycle"  lcCooperative="0.75" lcPushy="0.25" latAlignment="compact" probability=".70"/>
    <vType vClass="moped"      id="moped"       lcCooperative="0.75" lcPushy="0.25" latAlignment="compact" probability=".30"/>
  </vTypeDistribution>
  <vTypeDistribution id="passenger">
    <vType vClass="passenger"  id="passenger1"  lcCooperative="0.75" lcPushy="0.25" personCapacity="4" latAlignment="arbitrary" sigma="0.25" probability=".20" speedDev="0.1" guiShape="passenger"/>
    <vType vClass="passenger"  id="passenger2a" lcCooperative="0.75" lcPushy="0.25" personCapacity="4" latAlignment="arbitrary" sigma="0.30" probability=".20" speedDev="0.1" guiShape="passenger/sedan"/>
    <vType vClass="passenger"  id="passenger2b" lcCooperative="0.75" lcPushy="0.25" personCapacity="4" latAlignment="arbitrary" sigma="0.35" probability=".20" speedDev="0.1" guiShape="passenger/hatchback"/>
    <vType vClass="passenger"  id="passenger3"  lcCooperative="0.75" lcPushy="0.25" personCapacity="6" latAlignment="arbitrary" sigma="0.40" probability=".20" speedDev="0.1" guiShape="passenger/wagon"/>
    <vType vClass="passenger"  id="passenger4"  lcCooperative="0.75" lcPushy="0.25" personCapacity="6" latAlignment="arbitrary" sigma="0.50" probability=".20" speedDev="0.1" guiShape="passenger/van"/>
  </vTypeDistribution>

  <!-- Special vehicles -->
  <vTypeDistribution id="special">
    <vType vClass="emergency" id="emergency"    lcCooperative="0.75" lcPushy="0.25"                        latAlignment="compact" probability=".60"/>
    <vType vClass="authority" id="authority"    lcCooperative="0.75" lcPushy="0.25"                        latAlignment="compact" probability=".39"/>
    <vType vClass="army"      id="army"         lcCooperative="0.75" lcPushy="0.25"                        latAlignment="compact" probability=".01"/>
  </vTypeDistribution>

  <!-- Other vehicles -->
  <vTypeDistribution id="other">
    <vType vClass="delivery"   id="delivery"    lcCooperative="0.75" lcPushy="0.25" containerCapacity="15" latAlignment="arbitrary" probability=".50"/>
    <vType vClass="truck"      id="truck"       lcCooperative="0.75" lcPushy="0.25" containerCapacity="5"  latAlignment="arbitrary" probability=".30"/>
    <vType vClass="trailer"    id="trailer"     lcCooperative="0.75" lcPushy="0.25" containerCapacity="5"  latAlignment="arbitrary" probability=".10"/>
    <vType vClass="coach"      id="coach"       lcCooperative="0.75" lcPushy="0.25" containerCapacity="50" latAlignment="arbitrary" probability=".10"/>
  </vTypeDistribution>

  <vType vClass="evehicle"     id="evehicle"    lcCooperative="0.75" lcPushy="0.25" personCapacity="4"     latAlignment="arbitrary"/>
</routes>
