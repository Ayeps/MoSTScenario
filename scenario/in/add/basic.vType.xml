<routes>
  <!-- Public Transports -->
  <vType vClass="bus"  id="bus"   personCapacity="50" latAlignment="compact">
    <param key="has.rerouting.device" value="false"/>
  </vType>
  <vType vClass="rail" id="train" personCapacity="500">
    <param key="has.rerouting.device" value="false"/>
  </vType>

  <vTypeDistribution id="on-demand">
    <vType vClass="taxi"       id="taxi"  personCapacity="4" latAlignment="compact" probability=".50"/>
    <vType vClass="passenger"  id="uber"  personCapacity="8" latAlignment="compact" probability=".50"/>
  </vTypeDistribution>

  <!-- Vulnerable Road Users -->
  <vTypeDistribution id="pedestrian">
    <vType vClass="pedestrian"   id="slowpedestrian"  maxSpeed="1.0" latAlignment="compact" probability=".33"/>
    <vType vClass="pedestrian"   id="avgpedestrian"   maxSpeed="1.5" latAlignment="compact" probability=".33"/>
    <vType vClass="pedestrian"   id="fastpedestrian"  maxSpeed="2.0" latAlignment="compact" probability=".33"/>
  </vTypeDistribution>
  <vTypeDistribution id="bicycle">
    <vType vClass="bicycle"      id="slowbicycle"     maxSpeed="4.2" latAlignment="compact" probability=".33"/>
    <vType vClass="bicycle"      id="avgbicycle"      maxSpeed="5.5" latAlignment="compact" probability=".33"/>
    <vType vClass="bicycle"      id="fastbicycle"     maxSpeed="6.9" latAlignment="compact" probability=".33"/>
  </vTypeDistribution>

  <!-- Normal vehicles -->
  <vTypeDistribution id="ptw">
    <vType vClass="motorcycle" id="motorcycle"  latAlignment="compact" probability=".70"/>
    <vType vClass="moped"      id="moped"       latAlignment="compact" probability=".30"/>
  </vTypeDistribution>
  <vTypeDistribution id="passenger">
    <vType vClass="passenger"  id="passenger1"  personCapacity="4" latAlignment="arbitrary" sigma="0.25" probability=".20" speedDev="0.1" guiShape="passenger"/>
    <vType vClass="passenger"  id="passenger2a" personCapacity="4" latAlignment="arbitrary" sigma="0.30" probability=".20" speedDev="0.1" guiShape="passenger/sedan"/>
    <vType vClass="passenger"  id="passenger2b" personCapacity="4" latAlignment="arbitrary" sigma="0.35" probability=".20" speedDev="0.1" guiShape="passenger/hatchback"/>
    <vType vClass="passenger"  id="passenger3"  personCapacity="6" latAlignment="arbitrary" sigma="0.40" probability=".20" speedDev="0.1" guiShape="passenger/wagon"/>
    <vType vClass="passenger"  id="passenger4"  personCapacity="6" latAlignment="arbitrary" sigma="0.50" probability=".20" speedDev="0.1" guiShape="passenger/van"/>
  </vTypeDistribution>

  <!-- Special vehicles -->
  <vTypeDistribution id="special">
    <vType vClass="emergency" id="emergency" latAlignment="compact" probability=".60"/>
    <vType vClass="authority" id="authority" latAlignment="compact" probability=".39"/>
    <vType vClass="army"      id="army"      latAlignment="compact" probability=".01"/>
  </vTypeDistribution>

  <!-- Other vehicles -->
  <vTypeDistribution id="commercial">
    <vType vClass="delivery"   id="delivery"    containerCapacity="15" latAlignment="compact" probability=".75"/>
    <vType vClass="truck"      id="truck"       containerCapacity="5"  latAlignment="compact" probability=".05"/>
    <vType vClass="trailer"    id="trailer"     containerCapacity="5"  latAlignment="compact" probability=".10"/>
    <vType vClass="coach"      id="coach"       containerCapacity="50" latAlignment="compact" probability=".10"/>
  </vTypeDistribution>

  <vType vClass="evehicle"     id="evehicle"    personCapacity="4"     latAlignment="arbitrary"/>
</routes>
